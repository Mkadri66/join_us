{% extends 'base.html.twig' %}


{% block body %}
    <h1 class="text-center"> Parties de padel</h1>
    <br><br>
    {% if parties %}
    <div class="container">
        <div class="row ">
            {% for party in parties %}
                <div class="card col-md-4"  >
                    <img class="card-img-top img-fluid" src="{{ asset('images/' ~ party.sport.name ~ '.jpg' ) }}" alt="Card image cap">
                    <div class="card-body">
                        <p>Organisateur de la partie : {{ party.organiser.username }} </p>
                        <p>Adresse : {{ party.address }} </p>
                        <p>Ville :  {{ party.city }} </p>
                        <p>Date : {{ party.date.date|date("d/m/Y") }} </p>
                        <p>Horaire : {{ party.schedule.date|date("H:i") }} </p>
                        <a href="{{ path('party_show', { 'id': party.id }) }}"> Voir la partie </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br> <br>
        {% else %}
            <h3 class="text-center"> Aucune partie n'a été encore créée pour ce sport ! </h3>
            <p class="text-center"> <a href="{{ path('party_new') }}"> Voulez-vous créer une partie ? </a> </p>
        {% endif %}
      
    </div>
        
    </div>

{% endblock %}