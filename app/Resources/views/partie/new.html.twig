{% extends 'base.html.twig' %}



{% block body %}

    {# {{ dump( utilisateur ) }} #}
    <div class="well col-md-6 offset-md-4">
        <h2 class="text-center"> Creer une partie </h2>
        <div class="form-group">
            {{ form_start(form ,{'attr': {'class': 'form-horizontal col-lg-10'}}) }}

                {# Génération du label. #}
                {{ form_label(form.adresse, "Lieu de la partie (adresse) ", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    <div class="error_message"> {{ form_errors(form.adresse) }} </div>
                </div>

                {# Génération du label. #}
                {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.date) }}
                    {{ form_errors(form.date) }}
                </div>
                {# Génération du label. #}
                {{ form_label(form.horaire, "Horaire", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {# Génération de l'erreur  #}
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.horaire ) }}
                    {{ form_errors(form.horaire ) }}
                </div>

                {# Génération du label. #}
                {{ form_label(form.joueursActif , "Joueur(s) disponible(s)", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.joueursActif, {'attr': {'class': 'form-control' }}) }}
                    
                    <div class="error_message"> {{ form_errors(form.joueursActif) }} </div>
                </div>

                {# Génération du label. #}
                {{ form_label(form.totalJoueurs , "Nombre de joueurs voulu pour finaliser la partie", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.totalJoueurs, {'attr': {'class': 'form-control' }}) }}
                    <div class="error_message"> {{ form_errors(form.totalJoueurs) }} </div>
                </div>

                {# Génération du label. #}
                {{ form_label(form.sport , "Sport", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.sport, {'attr': {'class': 'form-control' }}) }}
                    <div class="error_message"> {{ form_errors(form.sport ) }} </div>
                </div>

                {# Génération du label. #}
                {{ form_label(form.ville , "Ville", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}
                {# Génération de l'erreur  #}
                
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control' }}) }}
                    <div class="error_message"> {{ form_errors(form.ville ) }} </div>
                </div>
        </div>
                <div class="col-sm-12 text-center">
                    {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">

        <script>
            jQuery(document).ready(function() {
                $('.js-datepicker').datepicker();
            });
        </script>   
{% endblock %}
